#!/bin/sh
### THESE ARE NOT ALL THE OPTIONS, SEE BSPWM MAN PAGE

# LOAD BSPWM KEYBINDS
# (KEEP IN MIND THERE IS ALREADY AN INSTANCE OF SXHKD FOR GLOBAL KEYBINDS)
pgrep -x sxhkd | wc -l >= 2 || sxhkd -c "$HOME/.config/sxhkd/bspwm" &
# PICOM TENDS TO CRASH UNDER BSPWM
pgrep -x picom || picom --experimental-backends

# PYWAL COLORS
. "$HOME/.cache/wal/colors.sh"

# WORKSPACE NAMES
bspc monitor -d WEB GAM SOC FIL CON TER COD IMG VID TOR

# WINDOW DECORATION
bspc config border_width            2
bspc config window_gap              12
bspc config normal_border_color     "$color0"
bspc config active_border_color     "$color0"
bspc config focused_border_color    "$color1"

# WINDOW MANAGER OPTIONS
bspc config pointer_modifier        mod1
bspc config split_ratio             0.50
#bspc config automatic_scheme        longest_side
bspc config focus_follows_pointer   true

# BSP-LAYOUT
bsp-layout set tall I --master-size 0.55
bsp-layout set tall II --master-size 0.55
bsp-layout set tall III --master-size 0.55
bsp-layout set tall IV --master-size 0.55
bsp-layout set tall V --master-size 0.55
bsp-layout set tall VI --master-size 0.55
bsp-layout set tall VII --master-size 0.55
bsp-layout set tall VIII --master-size 0.55
bsp-layout set tall IX --master-size 0.55
bsp-layout set tall X --master-size 0.55

# APPLICATION RULES
bspc rule -a "qBittorrent:qbittorrent:qBittorrent v4.3.8" desktop='^10'
bspc rule -a "Pavucontrol" state=floating

# LAUNCH POLYBAR
# (LAUNCH YOUR BARS AFTER WORKSPACE NAMES ARE SET)
. "$HOME/.scripts/polybar.sh" bspwm
