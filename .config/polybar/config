[bar/bspwm]
width = 100%
height = 24
fixed-center = false
background = ${colors.background-alpha}
foreground = ${colors.foreground}
line-size = 3
module-margin = 1
font-0 = "JetBrains Mono:pixelsize=10;2"
font-1 = "Material Icons:pixelsize=10;2"
modules-left = bspwm xwindow
modules-right = pulsehdmi pulsejack date
wm-restack = bspwm
tray-position = right
tray-padding = 2 

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

